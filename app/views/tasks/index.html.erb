<h1> List of tasks </h1>

<p><%= link_to "new task", tasks_new_path  %></p>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <h2>
      <p><%= link_to task.name, task_path(task)%> </p>
    </h2>
    <p>
      <%= task.description %>
    </p>
    <p><%= link_to "edit", task_edit_path(task)%>
    </p> <br>
    <p>
      <%= link_to "delete", task_path(task), method: :delete %>
    </p>
  </li>
  <% end %>
</ul>
